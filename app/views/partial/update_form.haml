%dl
  %dt display?
  %dd
    %input{:name => "display", :type => "checkbox", :value => "1", :checked => update.display}>
  %dt title
  %dd
    %input{:name => "title", :type => "text", :size => 80, :value => update.title}>
  %dt date
  %dd
    %input{:name => "date_y", :type => "text", :size => 4, :value => update.date ? update.date.year : false}>
    %input{:name => "date_m", :type => "text", :size => 2, :value => update.date ? update.date.month : false}>
    %input{:name => "date_d", :type => "text", :size => 2, :value => update.date ? update.date.day : false}>
  %dt body
  %dd
    %textarea{:name => "body", :rows => 7, :cols => 80}>= update.body
    %button#preview{} preview
    %div.previewArea
  %p
    %input{:type => "submit", :value => '登録'}>

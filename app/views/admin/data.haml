%h1
  %a{:href => './'} admin
%h2 データ
%ul
  %li
    %a{:href => '/_ah/admin'}> 管理画面
  %li
    %dl
      %dt アーティストLastFmArtist
      %dd
        %h3 確認
        %form{:method => "get", :action => '/api/lastfm'}
          %dl
            %dt アーティスト名
            %dd<
              %input{:name => "artist"}
              %input{:name => "method", :value => "artist.getInfo", :type => "hidden"}
          %input{:type => "submit", :value => "確認"}>
        %h3 登録
        %form{:method => "post", :action => '/api/artist'}
          %dl
            %dt アーティスト名
            %dd<
              %input{:name => "artist"}
          %dl
            %dt 画像データ(json) should be list
            %dd<
              %textarea{:name => "image", :rows => 7, :cols => 80}>
          %input{:type => "submit", :value => "登録"}>

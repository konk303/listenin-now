#templates{ :style => "display:none;" }
  / tracks
  %dl.track
    %dt.image.perItem<
      %img{ :src => "http://dl.getdropbox.com/u/1035457/opensocial/mixi/listenin_now/static/noimage.png", :alt => "" }
    %dd.perItem
      %p.name<
        %a.external{ :href => "http://example.com/" }
      %p.artist<
        %a.external{ :href => "http://example.com/" }
      %p.album<
        %a.external{ :href => "http://example.com/" }
      %p.date
      .button_iTs{ :title => "曲をiTunes Storeで探す" }
      .button_community{ :title => "アーティスト名でコミュニティを検索" }

  / result_iTS
  .result_iTS
    %h2 iTunes Store 検索
    %dl.tracks_iTS
      %dt.perItem<
        %a.artist{ :href => "http://example.com/", :target => "_blank" }
        %br>
        %a.image{ :href => "http://example.com/", :target => "_blank" }<
          %img{ :src => "http://dl.getdropbox.com/u/1035457/opensocial/mixi/listenin_now/static/noimage.png", :alt => "" }
      %dd.perItem
        %p.name<
          %a{ :href => "http://example.com/", :target => "_blank" }<
            %span.price
        %p.artist<
          %a{ :href => "http://example.com/", :target => "_blank" }<
            %span.price
    .close_button{ :title => "閉じる" }

  / loading
  .loading<
    %img{ :title => "now loading", :src => "http://dl.getdropbox.com/u/1035457/opensocial/mixi/listenin_now/static/ajax-loader.gif", :alt => "now loading" }
